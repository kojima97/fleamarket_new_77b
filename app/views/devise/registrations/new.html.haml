.sign-up-wrapper
  %header.sign-up__header
    = link_to '#' do
      = image_tag "http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"
    
  %main.sign-up-content
    %h2.sign-up-content__head 会員情報入力
    = render "devise/shared/error_messages", resource: resource
    %section.sign-up-content__main
      .sign-up-content__main__form
        = form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f|
          
          .sign-up-content__main__form__group
            = f.label :nickname
            %br/
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
          .sign-up-content__main__form__group
            = f.label :email
            %br/
            = f.text_field :email, autofocus: true, autocomplete: "email"
          .sign-up-content__main__form__group
            = f.label :password
            
            %br/
            = f.password_field :password, autocomplete: "new-password"
          .sign-up-content__main__form__group
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password"
          .sign-up-content__main__form__group
            = f.label :first_name
            %br/
            = f.text_field :first_name, autofocus: true, autocomplete: "first_name"
            = f.label :last_name
            %br/
            = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
            
            
          .sign-up-content__main__form__group
            = f.label :first_name_furigana
            %br/
            = f.text_field :first_name_furigana, autofocus: true, autocomplete: "first_name_furigana"
            = f.label :last_name_furigana
            %br/
            = f.text_field :last_name_furigana, autofocus: true, autocomplete: "last_name_furigana"
          
          
           
          .sign-up-content__main__form__group
            = f.label :birthday
            %br/
            = f.date_select :birthday, start_year: 1900, end_year: Time.current.year, use_month_numbers: true
          
          .sign-up-content__main__form__group
            = f.label :tel_number
            %br/
            = f.password_field :tel_number , autocomplete: "tel_number "
          .sign-up-content__main__form__actions
            = f.submit "次に進む",class:"sign-up-content__main__form__actions__button"
          
