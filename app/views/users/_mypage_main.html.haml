.main-content
  %section.user
    .user-link
      %figure
        = image_tag "member_photo_noimage_thumb.png", class: "user__icon"
      %h2.user-link__name
        = current_user.nickname
      .user-link__number
        評価 0 出品数;0

  %section.notification-todo
    %ul.tabs
      %li.select
        お知らせ
      %li
        やることリスト
